{
  "name": "Codiga Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "alarms",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": [
        "external/custom-elements.min.js",
        "external/popper.js",
        "scripts/githubContainerElement.js",
        "scripts/utils.js",
        "scripts/githubPickLanguage.js",
        "components/CodigaElement.js", 
        "components/CodigaExtension.js", 
        "components/CodigaExtensionHighlights.js", 
        "components/CodigaHighlight.js", 
        "content-script.js"
      ],
      "css": []
    },
    {
      "matches": ["https://*/*.ipynb*", "http://*/*.ipynb*"],
      "js": [
        "external/custom-elements.min.js", 
        "external/popper.js",
        "scripts/jupyterContainerElement.js",
        "scripts/utils.js",
        "scripts/jupyterPickLanguage.js",
        "components/CodigaElement.js", 
        "components/CodigaExtension.js", 
        "components/CodigaExtensionHighlights.js", 
        "components/CodigaHighlight.js", 
        "content-script.js"
      ],
      "css": []
    }
  ]
}
