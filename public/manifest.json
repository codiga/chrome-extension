{
  "manifest_version": 3,

  "name": "Codiga",
  "description": "Create, share and use Code Snippets from your browser",
  "version": "0.0.13",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/styles.js", "js/content_script_all.js"]
    },
    {
      "matches": ["https://stackoverflow.com/*"],
      "js": ["js/content_script_stackoverflow.js"]
    },
    {
      "matches": [
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://bitbucket.org/*",
        "https://stackoverflow.com/*",
        "https://replit.com/*"
      ],
      "js": ["js/content_script_replit.js", "js/web_styles.js", "js/styles.js"]
    }
  ],

  "action": {
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Codiga"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "contextMenus"],

  "web_accessible_resources": [
    {
      "resources": ["icon*", "*.ttf", "*.woff2", "*/styles.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  }
}
