{
  "manifest_version": 3,

  "name": "Codiga",
  "description": "Code analysis for GitHub and Python notebooks",
  "version": "0.0.8",

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["https://*.github.com/*"],
      "js": ["js/content_script_github.js"],
      "css": ["toastify.css"]
    },
    {
      "matches": [
        "https://*/*.ipynb*",
        "http://*/*.ipynb*",
        "http://*/lab/*",
        "https://*/lab/*"
      ],
      "exclude_matches": ["https://*.github.com/*"],
      "js": ["js/content_script_jupyter.js"],
      "css": []
    },
    {
      "matches": ["https://stackoverflow.com/*"],
      "js": ["js/content_script_stackoverflow.js"]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/content_script_all.js"],
      "css": []
    }
  ],

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Codiga",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": ["storage", "contextMenus"],

  "web_accessible_resources": [
    {
      "resources": ["icon*"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
